<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--When Button is not enabled -->
    <item android:state_enabled="false" android:color="#865959" />
    <!--When Button is in pressed state -->
    <item android:state_pressed="true" android:color="#EA3535" />
    <!--When Button is in selected state -->
    <item android:state_selected="true" android:color="#AF2A2A" />
    <!--Default Background Color -->
    <item android:color="#E0E0E0" />
</selector>